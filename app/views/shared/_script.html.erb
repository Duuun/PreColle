<script>
$(function() {
  var topBtn = $('.scroll-up');
  topBtn.hide();
  //スクロールが100に達したらボタン表示
  $(window).scroll(function() {
    if($(this).scrollTop() > 150 ) {
      topBtn.fadeIn();
    } else {
      topBtn.fadeOut();
    }
  });

  //smooth scroll top
  topBtn.click(function() {
    $('body,html').animate({
      scrollTop: 0
    }, 400);
    return false;
  })
});
</script>